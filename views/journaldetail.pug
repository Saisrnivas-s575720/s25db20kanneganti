extends layout

block content
  h1.text-center.mb-5.text-primary.display-4(style="font-family: 'Dancing Script', cursive;") My Journal

  .text-end.mb-4
    a.btn.btn-success.shadow-sm(href="/journals/create") + New Journal

  if results.length
    .row.row-cols-1.row-cols-md-2.g-4
      each journal in results
        .col
          .card.journal-card.shadow-sm.border-start.border-5.border-success
            .card-body
              h4.card-title.text-primary.mb-2 #{journal.title}
              h6.card-subtitle.text-muted.mb-2 Author: #{journal.author}
              p.card-text.mt-3 #{journal.content.length > 160 ? journal.content.substring(0, 160) + '...' : journal.content}

            .card-footer.bg-transparent.border-0.d-flex.justify-content-end.gap-2
              a.btn.btn-outline-primary.btn-sm(href=`/journals/detail?id=${journal._id}`) View
              a.btn.btn-outline-warning.btn-sm(href=`/journals/${journal._id}/edit`) Edit
              a.btn.btn-outline-danger.btn-sm(href=`/journals/${journal._id}/delete`) Delete
  else
    .alert.alert-info.text-center.mt-4 No journal entries yet.
