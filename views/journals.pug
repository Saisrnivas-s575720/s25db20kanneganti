extends layout

block content
  h1.text-center.mb-4= title

  a.btn.btn-success.mb-3(href="/journals/create") + New Journal

  if results.length
    table.table.table-striped
      thead
        tr
          th Title
          th Author
          th Content
          th Actions
      tbody
        each journal in results
          tr
            td= journal.title
            td= journal.author
            td= journal.content.length > 50 ? journal.content.substring(0, 50) + "..." : journal.content
            td
              a.btn.btn-sm.btn-primary(href=`/journals/detail?id=${journal._id}`) View
              a.btn.btn-sm.btn-warning.ms-2(href=`/journals/${journal._id}/edit`) Edit
              a.btn.btn-sm.btn-danger.ms-2(href=`/journals/${journal._id}/delete`) Delete
  else
    p.text-muted.text-center No journal entries found.
