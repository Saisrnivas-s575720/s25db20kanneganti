doctype html
html
  head
    title
      if title
        = title
      else
        | My Journal App

    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Dancing+Script&family=Libre+Baskerville&display=swap", rel="stylesheet")

    style.
      body {
        background: linear-gradient(120deg, #f3e7e9 0%, #e3eeff 100%);
        font-family: 'Libre Baskerville', serif;
        background-attachment: fixed;
        min-height: 100vh;
      }
      h1, h2, h3 {
        font-family: 'Dancing Script', cursive;
      }
      .card {
        background-color: rgba(255, 255, 255, 0.95);
        border: 1px solid #dee2e6;
        border-radius: 1rem;
      }
      .btn {
        font-weight: bold;
        letter-spacing: 0.5px;
      }

  body
    // ‚úÖ Flash messages (only for login/logout, not form validation)
    if success
      .container.mt-4
        .alert.alert-success.alert-dismissible.fade.show(role="alert")
          strong ‚úÖ
          | #{success}
          button.btn-close(type="button", data-bs-dismiss="alert", aria-label="Close")

    // ‚úÖ Show flash error only if not on create/update pages
    if error && !['/journals/create', '/journals/update'].includes(currentPath)
      .container.mt-4
        .alert.alert-danger.alert-dismissible.fade.show(role="alert")
          strong ‚ö†Ô∏è
          | #{error}
          button.btn-close(type="button", data-bs-dismiss="alert", aria-label="Close")

    // üîÅ Main content block
    block content

    // Scripts
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
